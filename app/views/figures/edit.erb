<h1>Edit Figure <%= @figure.name %></h1>
<form action="/figures/<%= @figure.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <p>
    Figure Name: <input type="text" name="figure[name]" id="figure_name">
  </p>
  <p>
    Figure Titles: <br>
    <% Title.all.each do |title| %>
        <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.id %>" <%= 'checked' if @figure.titles.include?(title) %>> <%= title.name %>
    <% end %>
  </p>
  <p>
    Figure Landmarks: <br>
    <% Landmark.all.each do |landmark| %>
        <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="landmark_<%= landmark.id %>" <%= 'checked' if @figure.landmarks.include?(landmark) %>> <%= landmark.name %>
    <% end %>
  </p>
  <p>
    Create new Landmark: <input type="text" name="landmark[name]" id="new_landmark">
  </p>
  <p>
    Create new Title: <input type="text" name="title[name]" id="new_title">
  </p>
  <input type="submit" value="Edit Figure">
</form>
